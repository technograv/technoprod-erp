{% extends 'base.html.twig' %}

{% block title %}TechnoProd - Connexion{% endblock %}

{% block body %}
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Connexion TechnoProd</h3>
                </div>
                <div class="card-body">
                    <form method="post">
                        {% if error %}
                            <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Se déconnecter</a>
                            </div>
                        {% endif %}

                        <div class="mb-3">
                            <label for="username" class="form-label">Email</label>
                            <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="username" required autofocus>
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Mot de passe</label>
                            <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required>
                        </div>

                        <input type="hidden" name="_token" value="{{ csrf_token('authenticate') }}">

                        <div class="d-grid">
                            <button class="btn btn-primary" type="submit">
                                Se connecter
                            </button>
                        </div>
                    </form>
                    
                    <div class="text-center my-3">
                        <hr>
                        <small class="text-muted">ou</small>
                    </div>
                    
                    <div class="d-grid gap-2">
                        <a href="{{ path('google_oauth_start') }}" class="btn btn-outline-danger">
                            <i class="fab fa-google me-2"></i>Se connecter avec Google
                        </a>
                    </div>
                    
                    <div class="mt-3">
                        <small class="text-muted">
                            <i class="fas fa-info-circle me-1"></i>
                            Seuls les domaines autorisés peuvent se connecter :<br>
                            decorpub.fr, technograv.fr, pimpanelo.fr, technoburo.fr, pimpanelo.com
                        </small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}