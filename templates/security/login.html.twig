{% extends 'base.html.twig' %}

{% block title %}TechnoProd - Connexion{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .login-container {
            min-height: 80vh;
            display: flex;
            align-items: center;
            justify-content: center;
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .login-card {
            background: rgba(255, 255, 255, 0.95);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
            border: none;
        }
        
        .login-header {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
            color: white;
            padding: 2rem;
            text-align: center;
            border-radius: 20px 20px 0 0;
        }
        
        .login-body {
            padding: 3rem;
        }
        
        .google-btn {
            background: linear-gradient(135deg, #db4437 0%, #c23321 100%);
            border: none;
            border-radius: 50px;
            padding: 1rem 2rem;
            font-weight: 600;
            transition: all 0.3s ease;
            box-shadow: 0 4px 15px rgba(219, 68, 55, 0.3);
        }
        
        .google-btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 8px 25px rgba(219, 68, 55, 0.4);
            background: linear-gradient(135deg, #c23321 0%, #a12e20 100%);
        }
        
        .logo-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
        }
        
        .domain-info {
            background: rgba(0, 123, 255, 0.1);
            border: 1px solid rgba(0, 123, 255, 0.2);
            border-radius: 10px;
            padding: 1rem;
            margin-top: 2rem;
        }
        
        .domain-badge {
            background: rgba(0, 123, 255, 0.1);
            color: #007bff;
            padding: 0.25rem 0.5rem;
            border-radius: 15px;
            font-size: 0.85rem;
            margin: 0.25rem;
            display: inline-block;
        }
    </style>
{% endblock %}

{% block body %}
<div class="login-container">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-5">
                {% if app.user %}
                    <div class="alert alert-info text-center">
                        <h4><i class="fas fa-check-circle me-2"></i>Vous êtes déjà connecté</h4>
                        <p class="mb-3">Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong></p>
                        <div class="btn-group">
                            <a href="{{ path('workflow_dashboard') }}" class="btn btn-primary">
                                <i class="fas fa-tachometer-alt me-2"></i>Accéder au Dashboard
                            </a>
                            <a href="{{ path('app_logout') }}" class="btn btn-outline-secondary">
                                <i class="fas fa-sign-out-alt me-2"></i>Se déconnecter
                            </a>
                        </div>
                    </div>
                {% else %}
                    <div class="card login-card">
                        <div class="login-header">
                            <i class="fas fa-cogs logo-icon"></i>
                            <h2 class="mb-0">TechnoProd ERP</h2>
                            <p class="mb-0 opacity-75">Connexion Sécurisée</p>
                        </div>
                        <div class="login-body text-center">
                            {% if error %}
                                <div class="alert alert-danger mb-4">
                                    <i class="fas fa-exclamation-triangle me-2"></i>
                                    {{ error.messageKey|trans(error.messageData, 'security') }}
                                </div>
                            {% endif %}

                            <h4 class="mb-4 text-dark">Authentification Google</h4>
                            <p class="text-muted mb-4">
                                TechnoProd utilise l'authentification Google sécurisée pour protéger votre accès.
                            </p>
                            
                            <div class="d-grid">
                                <a href="{{ path('google_oauth_start') }}" class="btn btn-danger google-btn btn-lg">
                                    <i class="fab fa-google fa-lg me-3"></i>
                                    Se connecter avec Google
                                </a>
                            </div>
                            
                            <div class="domain-info">
                                <h6 class="text-primary mb-2">
                                    <i class="fas fa-shield-alt me-2"></i>Domaines Autorisés
                                </h6>
                                <p class="text-muted small mb-2">Seuls les comptes Google des domaines suivants sont acceptés :</p>
                                <div class="mb-0">
                                    <span class="domain-badge">decorpub.fr</span>
                                    <span class="domain-badge">technograv.fr</span>
                                    <span class="domain-badge">pimpanelo.fr</span>
                                    <span class="domain-badge">technoburo.fr</span>
                                    <span class="domain-badge">pimpanelo.com</span>
                                </div>
                            </div>
                            
                            <div class="mt-4">
                                <small class="text-muted">
                                    <i class="fas fa-lock me-1"></i>
                                    Connexion sécurisée SSL - Vos données sont protégées
                                </small>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}