<form method="post" action="{{ path('app_client_delete', {'id': client.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce client ?\\n\\nCette action est irréversible et supprimera toutes les données associées.');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ client.id) }}">
    <button type="submit" class="btn btn-danger">
        <i class="fas fa-trash"></i> Supprimer le client
    </button>
</form>
