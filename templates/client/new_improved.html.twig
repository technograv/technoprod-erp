{% block javascripts %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Initialisation du système de templates dynamiques
        console.log('🚀 Initialisation du système de templates par forme juridique');


        // Mise à jour du résumé en temps réel
        function updateSummary() {
            const nomField = document.querySelector('input[name="client[nom]"]');
            const personneNom = document.querySelector('input[name="personne_nom"]');
            const personnePrenom = document.querySelector('input[name="personne_prenom"]');
            const personneEmail = document.querySelector('input[name="personne_email"]');
            const contactNom = document.querySelector('input[name="contact_nom"]');
            const contactPrenom = document.querySelector('input[name="contact_prenom"]');
            const contactEmail = document.querySelector('input[name="contact_email"]');
            // const familleField = document.querySelector('select[name="client[famille]"]'); // Removed famille field
            const villeField = document.querySelector('input[name="adresse_ville"]');
            const personneAdresseVille = document.querySelector('input[name="personne_adresse_ville"]');
            const formeJuridiqueSelect = document.getElementById('forme-juridique-select');
            const selectedFormeJuridique = formeJuridiqueSelect ? formeJuridiqueSelect.options[formeJuridiqueSelect.selectedIndex]?.text : '';
            
            // Construire le nom complet selon la forme juridique
            let displayName = 'Non défini';
            let contactName = 'Non défini';
            let emailAddress = 'Non défini';
            
            if (selectedFormeJuridique === 'Particulier') {
                // Template personne physique
                if (personneNom && personneNom.value) {
                    displayName = personnePrenom && personnePrenom.value ? 
                        (personnePrenom.value + ' ' + personneNom.value).trim() : 
                        personneNom.value;
                }
                contactName = displayName;
                emailAddress = personneEmail ? personneEmail.value || 'Non défini' : 'Non défini';
            } else if (selectedFormeJuridique && selectedFormeJuridique !== '') {
                // Template personne morale
                if (nomField && nomField.value) {
                    displayName = nomField.value;
                }
                if (contactNom && contactPrenom) {
                    contactName = (contactPrenom.value + ' ' + contactNom.value).trim() || 'Non défini';
                }
                emailAddress = contactEmail ? contactEmail.value || 'Non défini' : 'Non défini';
            }
            
            document.getElementById('summary-name').textContent = displayName;
            document.getElementById('summary-contact').textContent = contactName;
            document.getElementById('summary-email').textContent = emailAddress;
            
            // Famille field removed from summary
            
            // Ville selon la forme juridique  
            if (selectedFormeJuridique === 'Particulier') {
                // Template personne physique
                if (personneAdresseVille) {
                    document.getElementById('summary-ville').textContent = personneAdresseVille.value || 'Non définie';
                }
            } else if (selectedFormeJuridique && selectedFormeJuridique !== '') {
                // Template personne morale
                if (villeField) {
                    document.getElementById('summary-ville').textContent = villeField.value || 'Non définie';
                }
            }
        }

        // Événements pour la mise à jour du résumé
        document.querySelectorAll('input[name="client[nom]"], input[name="contact_nom"], input[name="contact_prenom"], input[name="contact_email"], input[name="adresse_ville"], input[name="personne_prenom"], input[name="personne_nom"], input[name="personne_email"], input[name="personne_adresse_ville"]').forEach(function(field) {
            field.addEventListener('input', updateSummary);
            field.addEventListener('change', updateSummary);
        });

        // Fonction pour appliquer l'état initial et gérer les changements
        function setupFormeJuridiqueHandler() {
            // Utiliser l'ID généré par Symfony
            const formeJuridiqueSelect = document.getElementById('client_formeJuridique');
            
            if (!formeJuridiqueSelect) {
                console.error('Select forme juridique non trouvé');
                return;
            }
            
            console.log('✅ Select forme juridique trouvé:', formeJuridiqueSelect.id);

            // Fonction qui gère le changement de forme juridique
            function handleChange() {
                const selectedText = formeJuridiqueSelect.options[formeJuridiqueSelect.selectedIndex]?.text;
                const templatePersonnePhysique = document.getElementById('template-personne-physique');
                const templatePersonneMorale = document.getElementById('template-personne-morale');
                
                console.log('📋 Forme juridique sélectionnée:', selectedText);
                
                if (!templatePersonnePhysique || !templatePersonneMorale) {
                    console.error('Templates non trouvés');
                    return;
                }

                // Masquer tous les templates d'abord
                templatePersonnePhysique.style.display = 'none';
                templatePersonneMorale.style.display = 'none';

                if (selectedText === 'Particulier') {
                    console.log('👤 Affichage template Personne Physique');
                    templatePersonnePhysique.style.display = 'block';
                    
                    // Activer champs personne physique
                    document.querySelectorAll('#template-personne-physique input, #template-personne-physique select').forEach(field => {
                        field.disabled = false;
                    });
                    
                    // Désactiver champs personne morale
                    document.querySelectorAll('#template-personne-morale input, #template-personne-morale select').forEach(field => {
                        field.disabled = true;
                        field.removeAttribute('required');
                    });
                    
                } else if (selectedText && selectedText !== '' && selectedText !== 'Sélectionner une forme juridique...') {
                    console.log('🏢 Affichage template Personne Morale');
                    templatePersonneMorale.style.display = 'block';
                    
                    // Activer champs personne morale
                    document.querySelectorAll('#template-personne-morale input, #template-personne-morale select').forEach(field => {
                        field.disabled = false;
                    });
                    
                    // Désactiver champs personne physique
                    document.querySelectorAll('#template-personne-physique input, #template-personne-physique select').forEach(field => {
                        field.disabled = true;
                        field.removeAttribute('required');
                    });
                } else {
                    console.log('Aucun template sélectionné');
                }
                
                updateSummary();
            }

            // Ajouter l'écouteur d'événement
            formeJuridiqueSelect.addEventListener('change', handleChange);
            
            // Appliquer l'état initial
            handleChange();
        }
        
        // Initialiser la gestion des formes juridiques
        setupFormeJuridiqueHandler();



        // Créer un conteneur de suggestions global
        let globalSuggestionsContainer = null;
        
        function createGlobalSuggestionsContainer() {
            if (!globalSuggestionsContainer) {
                globalSuggestionsContainer = document.createElement('div');
                globalSuggestionsContainer.className = 'commune-suggestions';
                globalSuggestionsContainer.id = 'global-commune-suggestions';
                document.body.appendChild(globalSuggestionsContainer);
            }
            return globalSuggestionsContainer;
        }
        
        function positionSuggestions(inputField) {
            const rect = inputField.getBoundingClientRect();
            const suggestions = createGlobalSuggestionsContainer();
            
            // Pour position fixed, on utilise directement rect.bottom sans scrollY
            suggestions.style.top = rect.bottom + 'px';
            suggestions.style.left = rect.left + 'px';
            suggestions.style.width = rect.width + 'px';
        }

        // Autocomplétion des communes françaises
        function setupCommuneAutocomplete() {
            const fields = document.querySelectorAll('[data-type="postal"], [data-type="city"]');
            
            fields.forEach(function(field) {
                // Éviter les doublons d'event listeners
                if (field.hasAttribute('data-autocomplete-initialized')) {
                    return;
                }
                field.setAttribute('data-autocomplete-initialized', 'true');
                
                let searchTimeout;

                field.addEventListener('input', function() {
                    const query = this.value.trim();
                    const suggestionsContainer = createGlobalSuggestionsContainer();
                    currentActiveField = this;
                    
                    clearTimeout(searchTimeout);
                    
                    if (query.length < 2) {
                        suggestionsContainer.style.display = 'none';
                        return;
                    }
                    
                    
                    searchTimeout = setTimeout(() => {
                        fetch(`/client/api/communes/search?q=${encodeURIComponent(query)}`)
                            .then(response => {
                                return response.json();
                            })
                            .then(data => {
                                suggestionsContainer.innerHTML = '';
                                
                                if (data.length > 0) {
                                    data.forEach(commune => {
                                        const div = document.createElement('div');
                                        div.className = 'commune-suggestion';
                                        div.textContent = `${commune.codePostal} - ${commune.nomCommune}`;
                                        div.addEventListener('click', () => selectCommune(field, commune));
                                        suggestionsContainer.appendChild(div);
                                    });
                                    positionSuggestions(field);
                                    suggestionsContainer.style.display = 'block';
                                } else {
                                    suggestionsContainer.style.display = 'none';
                                }
                            })
                            .catch(error => {
                                suggestionsContainer.style.display = 'none';
                            });
                    }, 300);
                });

                field.addEventListener('blur', function() {
                    setTimeout(() => {
                        const suggestionsContainer = createGlobalSuggestionsContainer();
                        suggestionsContainer.style.display = 'none';
                        currentActiveField = null;
                    }, 200);
                });

            });
        }

        function selectCommune(inputField, commune) {
            const inputType = inputField.dataset.type;
            const fieldName = inputField.name;
            
            if (inputType === 'postal') {
                inputField.value = commune.codePostal;
                
                // Déterminer le champ ville correspondant selon le type (personne physique ou morale)
                let villeField = null;
                if (fieldName === 'personne_adresse_code_postal') {
                    villeField = document.querySelector('input[name="personne_adresse_ville"]');
                } else {
                    villeField = document.querySelector('input[name="adresse_ville"]');
                }
                
                if (villeField) {
                    villeField.value = commune.nomCommune;
                }
            } else if (inputType === 'city') {
                inputField.value = commune.nomCommune;
                
                // Déterminer le champ code postal correspondant selon le type (personne physique ou morale)
                let codePostalField = null;
                if (fieldName === 'personne_adresse_ville') {
                    codePostalField = document.querySelector('input[name="personne_adresse_code_postal"]');
                } else {
                    codePostalField = document.querySelector('input[name="adresse_code_postal"]');
                }
                
                if (codePostalField) {
                    codePostalField.value = commune.codePostal;
                }
            }
            
            updateSummary();
            const suggestionsContainer = createGlobalSuggestionsContainer();
            suggestionsContainer.style.display = 'none';
        }

        // Variables pour tracker le champ actif
        let currentActiveField = null;
        
        // Gestionnaires globaux pour repositionner les suggestions
        window.addEventListener('scroll', function() {
            if (currentActiveField && globalSuggestionsContainer && globalSuggestionsContainer.style.display === 'block') {
                positionSuggestions(currentActiveField);
            }
        });
        
        window.addEventListener('resize', function() {
            if (currentActiveField && globalSuggestionsContainer && globalSuggestionsContainer.style.display === 'block') {
                positionSuggestions(currentActiveField);
            }
        });

        // Initialiser l'autocomplétion des communes
        setupCommuneAutocomplete();

        // Gestion de la soumission du formulaire pour éviter les erreurs de validation
        const form = document.querySelector('form');
        if (form) {
            form.addEventListener('submit', function(e) {
                // Désactiver temporairement tous les champs cachés pour éviter les erreurs de validation
                const hiddenSections = document.querySelectorAll('#personne-physique-fields, #contact-section, #adresse-section');
                hiddenSections.forEach(section => {
                    if (section.style.display === 'none') {
                        section.querySelectorAll('input, select').forEach(field => {
                            field.disabled = true;
                            field.removeAttribute('required');
                        });
                    }
                });
                
                // Gérer spécialement le champ nom d'entreprise selon la forme juridique
                const formeJuridiqueSelect = document.getElementById('forme-juridique-select');
                const selectedFormeJuridique = formeJuridiqueSelect ? formeJuridiqueSelect.options[formeJuridiqueSelect.selectedIndex]?.text : '';
                const nomEntrepriseField = document.querySelector('input[name="client[nom]"]');
                
                if (formeJuridiqueSelect && nomEntrepriseField) {
                    if (selectedFormeJuridique === 'Particulier') {
                        // Pour personne physique, désactiver le champ nom d'entreprise
                        nomEntrepriseField.disabled = true;
                        nomEntrepriseField.removeAttribute('required');
                    } else {
                        // Pour personne morale, s'assurer que le champ est actif et requis
                        nomEntrepriseField.disabled = false;
                        nomEntrepriseField.setAttribute('required', 'required');
                    }
                }
            });
        }

        // Mise à jour initiale du résumé
        updateSummary();
    });
    </script>
