                            <div class="row">
                                <div class="col-md-12">
                                    <div class="mb-3">
                                        {{ form_row(form.nom) }}
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Champs spécifiques personne physique -->
                        <div id="personne-physique-fields" style="display: none;">
                            <div class="row">
                                <div class="col-md-2">
                                    <div class="mb-3">
                                        <label class="form-label">Civilité <span class="required">*</span></label>
                                        <select class="form-select" name="personne_civilite" required>
                                            <option value="M.">M.</option>
                                            <option value="Mme">Mme</option>
