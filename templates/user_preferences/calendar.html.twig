                        <div class="card-header py-3">
                            <h6 class="m-0 font-weight-bold text-info">
                                <i class="fas fa-question-circle me-1"></i>Aide
                            </h6>
                        </div>
                        <div class="card-body">
                            <h6>üìÖ Calendriers d'affichage :</h6>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2">
                                    <i class="fas fa-calendar-check text-success me-2"></i>
                                    <strong>Calendriers s√©lectionn√©s :</strong> Affich√©s dans votre tableau de bord
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-calendar-times text-muted me-2"></i>
                                    <strong>Calendriers masqu√©s :</strong> Non affich√©s dans l'application
                                </li>
                            </ul>
                            
                            <h6>‚úèÔ∏è Calendriers d'√©criture :</h6>
                            <ul class="list-unstyled mb-4">
                                <li class="mb-2">
                                    <i class="fas fa-handshake text-primary me-2"></i>
                                    <strong>RDV commerciaux :</strong> Cr√©√©s lors de prise de rendez-vous
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-truck text-success me-2"></i>
                                    <strong>Livraisons :</strong> Cr√©√©s lors de planification livraison
                                </li>
                                <li class="mb-2">
                                    <i class="fas fa-file-invoice-dollar text-warning me-2"></i>
                                    <strong>Facturations :</strong> Cr√©√©s lors d'√©ch√©ances de paiement
                                </li>
                            </ul>
                            
                            <small class="text-muted">
                                <i class="fas fa-lightbulb me-1"></i>
                                Les √©v√©nements seront automatiquement cr√©√©s dans les calendriers choisis selon leur type.
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Fonctions de s√©lection en masse
    window.selectAllCalendars = function() {
        const checkboxes = document.querySelectorAll('input[name="selected_calendars[]"]');
        checkboxes.forEach(checkbox => {
            checkbox.checked = true;
        });
        updateSelectionPreview();
    };

    window.unselectAllCalendars = function() {
        const checkboxes = document.querySelectorAll('input[name="selected_calendars[]"]');
        checkboxes.forEach(checkbox => {
            checkbox.checked = false;
        });
        updateSelectionPreview();
    };

    // Mise √† jour aper√ßu en temps r√©el
    function updateSelectionPreview() {
        const checkboxes = document.querySelectorAll('input[name="selected_calendars[]"]:checked');
        const previewElement = document.getElementById('selection_preview');
        
        if (checkboxes.length > 0) {
            let html = `
                <p class="text-success mb-2">
                    <i class="fas fa-check-circle me-1"></i>
                    ${checkboxes.length} calendrier(s) s√©lectionn√©(s)
                </p>
                <ul class="list-unstyled">
            `;
            
            checkboxes.forEach(checkbox => {
                const label = checkbox.nextElementSibling.querySelector('strong').textContent;
                const isPrimary = checkbox.nextElementSibling.querySelector('.badge');
                html += `
                    <li class="mb-2">
                        <i class="fas fa-calendar text-success me-2"></i>
                        ${label}
                        ${isPrimary ? '<span class="badge bg-primary ms-1">Principal</span>' : ''}
                    </li>
                `;
            });
            
            html += '</ul>';
            previewElement.innerHTML = html;
        } else {
            previewElement.innerHTML = `
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    Aucun calendrier s√©lectionn√©
                    <small class="d-block mt-1">Le calendrier principal sera utilis√© par d√©faut</small>
                </div>
            `;
        }
    }

    // Event listeners pour mise √† jour en temps r√©el
    const checkboxes = document.querySelectorAll('input[name="selected_calendars[]"]');
    checkboxes.forEach(checkbox => {
        checkbox.addEventListener('change', updateSelectionPreview);
    });
});
</script>
{% endblock %}