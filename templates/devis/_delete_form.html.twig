<form method="post" action="{{ path('app_devis_delete', {'id': devis.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce devis ? Cette action est irréversible.');" style="display: inline;">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ devis.id) }}">
    <button type="submit" class="btn btn-outline-danger btn-sm">
        <i class="fas fa-trash"></i> Supprimer
    </button>
</form>
