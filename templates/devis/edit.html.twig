        $newItemCompact.find('.col-md-2').eq(1).append(designationField.addClass('form-control form-control-sm designation-input'));
        $newItemCompact.find('.col-md-1').eq(0).append(quantiteField.addClass('form-control form-control-sm quantity-input').val('1'));
