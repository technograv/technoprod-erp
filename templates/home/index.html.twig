{% extends 'base.html.twig' %}

{% block title %}TechnoProd - Accueil{% endblock %}

{% block stylesheets %}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
{% endblock %}

{% block body %}
<div class="container mt-4">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">Bienvenue sur TechnoProd</h1>
            <p class="lead">Système de gestion ERP/CRM pour imprimerie et communication</p>
        </div>
    </div>

    {% if app.user %}
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-success">
                    <h4>Connexion réussie !</h4>
                    <p>Bonjour {{ app.user.fullName }} ({{ app.user.email }})</p>
                    <a href="{{ path('app_logout') }}" class="btn btn-outline-danger">Se déconnecter</a>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Clients</h5>
                        <p class="card-text">Gérer les clients et leurs informations</p>
                        <a href="{{ path('app_client_index') }}" class="btn btn-primary">Gérer les clients</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Secteurs</h5>
                        <p class="card-text">Gérer les secteurs commerciaux</p>
                        <a href="{{ path('app_secteur_index') }}" class="btn btn-primary">Gérer les secteurs</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Devis</h5>
                        <p class="card-text">Créer et gérer les devis</p>
                        <a href="{{ path('app_devis_index') }}" class="btn btn-primary">Gérer les devis</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Zones géographiques</h5>
                        <p class="card-text">Base de données des codes postaux</p>
                        <a href="{{ path('app_zone_index') }}" class="btn btn-primary">Gérer les zones</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Contacts</h5>
                        <p class="card-text">Gérer les contacts clients</p>
                        <a href="{{ path('app_contact_index') }}" class="btn btn-primary">Gérer les contacts</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Adresses</h5>
                        <p class="card-text">Gérer les adresses clients</p>
                        <a href="{{ path('app_adresse_index') }}" class="btn btn-primary">Gérer les adresses</a>
                    </div>
                </div>
            </div>
        </div>
    {% else %}
        <div class="row mt-4">
            <div class="col-12">
                <div class="alert alert-info">
                    <h4>Connexion requise</h4>
                    <p>Vous devez vous connecter pour accéder à l'application.</p>
                    <a href="{{ path('app_login') }}" class="btn btn-primary">Se connecter</a>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Compte de test</h5>
                        <p class="card-text">Utilisez ces identifiants pour tester l'application :</p>
                        <p><strong>Email :</strong> admin@technoprod.com</p>
                        <p><strong>Mot de passe :</strong> admin123</p>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</div>

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
{% endblock %}
{% endblock %}