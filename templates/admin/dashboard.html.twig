{% block javascripts %}
    {{ parent() }}
    <script>
    document.addEventListener('DOMContentLoaded', function() {
        // Gérer le chargement AJAX des onglets
        document.querySelectorAll('[data-bs-toggle="tab"]').forEach(function(tab) {
            tab.addEventListener('shown.bs.tab', function(e) {
                const targetTab = e.target.getAttribute('href');
                loadTabContent(targetTab);
            });
        });
        
        function loadTabContent(tabId) {
            const tabContent = document.querySelector(tabId + ' .admin-section');
            if (!tabContent || tabContent.dataset.loaded) return;
            
            let url = '';
            switch(tabId) {
                case '#formes-juridiques':
                    url = '{{ path("app_admin_formes_juridiques") }}';
                    break;
                case '#users':
                    url = '{{ path("app_admin_users") }}';
                    break;
                case '#secteurs':
                    url = '{{ path("app_admin_secteurs") }}';
                    break;
                case '#zones':
                    url = '{{ path("app_admin_zones") }}';
                    break;
                case '#produits':
                    url = '{{ path("app_admin_produits") }}';
                    break;
                case '#settings':
                    url = '{{ path("app_admin_settings") }}';
                    break;
            }
            
            if (url) {
                fetch(url)
                    .then(response => response.text())
                    .then(html => {
                        // Remplacer tout le contenu de l'onglet avec la réponse HTML
                        tabContent.innerHTML = html;
                        tabContent.dataset.loaded = 'true';
                    })
                    .catch(error => {
                        console.error('Erreur de chargement:', error);
                        tabContent.innerHTML = '<p class="text-danger">Erreur de chargement du contenu.</p>';
                    });
            }
        }
    });
    </script>
