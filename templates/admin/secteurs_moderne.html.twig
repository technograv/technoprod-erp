<script>
// Fonction d'initialisation pour le dashboard admin
function initSecteursModerne() {
    console.log('üéØ Initialisation secteurs modernis√©s');
    
    // R√©-initialiser les event listeners si n√©cessaire
    setupFormListeners();
    
    console.log('‚úÖ Secteurs modernis√©s initialis√©s avec succ√®s');
