{% extends 'base.html.twig' %}

{% block title %}Secteur index{% endblock %}

{% block body %}
    <h1>Secteur index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomSecteur</th>
                <th>CouleurHex</th>
                <th>IsActive</th>
                <th>CreatedAt</th>
                <th>UpdatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for secteur in secteurs %}
            <tr>
                <td>{{ secteur.id }}</td>
                <td>{{ secteur.nomSecteur }}</td>
                <td>{{ secteur.couleurHex }}</td>
                <td>{{ secteur.isActive ? 'Yes' : 'No' }}</td>
                <td>{{ secteur.createdAt ? secteur.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>{{ secteur.updatedAt ? secteur.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_secteur_show', {'id': secteur.id}) }}">show</a>
                    <a href="{{ path('app_secteur_edit', {'id': secteur.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_secteur_new') }}">Create new</a>
{% endblock %}
