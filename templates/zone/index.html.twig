{% extends 'base.html.twig' %}

{% block title %}Zone index{% endblock %}

{% block body %}
    <h1>Zone index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>CodePostal</th>
                <th>Ville</th>
                <th>Departement</th>
                <th>Region</th>
                <th>Latitude</th>
                <th>Longitude</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for zone in zones %}
            <tr>
                <td>{{ zone.id }}</td>
                <td>{{ zone.codePostal }}</td>
                <td>{{ zone.ville }}</td>
                <td>{{ zone.departement }}</td>
                <td>{{ zone.region }}</td>
                <td>{{ zone.latitude }}</td>
                <td>{{ zone.longitude }}</td>
                <td>{{ zone.createdAt ? zone.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_zone_show', {'id': zone.id}) }}">show</a>
                    <a href="{{ path('app_zone_edit', {'id': zone.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_zone_new') }}">Create new</a>
{% endblock %}
